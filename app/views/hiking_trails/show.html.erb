<div class="page-header">
</div>

<div class="container-fluid">

<div class="row">
  <div class=" col-md-4 col-xs-12 ">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/hiking_trails/<%= @hiking_trail.id %>"><%=  @hiking_trail.description.titleize %>
          </a>
        </h3>
      </div>
      <div class="panel-body">
        <a href="/hiking_trails/<%= @hiking_trail.id %>">
           <img src="<%= @hiking_trail.image %>" class="img-responsive img-rounded">
        </a>


<div class="well">
  <!-- List group -->
  <ul class="list-group">

     <li class="list-group-item"><strong>Our Rating(1-5): </strong>

     <% if @hiking_trail.our_rating == 1 %>
        <i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>
     <% elsif @hiking_trail.our_rating == 2 %>
        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>
     <% elsif @hiking_trail.our_rating == 3 %>
        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>
     <% elsif @hiking_trail.our_rating == 4 %>
        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i>
     <% elsif @hiking_trail.our_rating == 5 %>
        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
     <% end  %>
     </li>
     <li class="list-group-item"><strong>Our Review: </strong><%= @hiking_trail.our_review %></li>
     <li class="list-group-item"><strong>Trail Info: </strong><a href="<%= @hiking_trail.link %>">Click Here</a></li>
</ul>
  </div>
  </div>
</div>
</div>
