<div class="page-header">
</div>

<div class="container-fluid">
<div class="row">
    <!-- list of all locations-->

<% @hotels.each do |hotel| %>


  <div class="col-md-4 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/hotels/<%= hotel.id %>"><%=  hotel.description.titleize %>, <%=hotel.location.city_country.capitalize%>
          </a>
        </h3>
      </div>
      <div class="panel-body">
        <a href="/hotels/<%=hotel.id%>">
           <img src="<%= hotel.image %>" class="img-responsive">
        </a>


<div class="well">
  <ul class="list-group">

     <li class="list-group-item"><strong>Our Rating(1-5): </strong><%= hotel.our_rating %></li>
     <li class="list-group-item"><strong>Our Review: </strong><%= hotel.our_review %></li>
     <li class="list-group-item"><strong>Hotel Website: </strong><a href="<%=hotel.link%>">Click Here</a></li>

</ul>

  </div>
  </div>
</div>
</div>   <!--column end -->
      <% end %>


</div>   <!--row end -->
</div>    <!--container end -->
